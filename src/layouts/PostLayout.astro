---
import BaseLayout from './BaseLayout.astro';
import IconTwitter from '../components/IconTwitter.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, date, author, twitter_username } = post.data;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

const isoDate = date.toISOString();
---

<BaseLayout title={title}>
  <article class="post" itemscope itemtype="http://schema.org/BlogPosting">
    <header class="post-header">
      <h1 class="post-title" itemprop="name headline">{title}</h1>
      <p class="post-meta">
        <time datetime={isoDate} itemprop="datePublished">{formattedDate}</time>
        {author && (
          <>
            {' â€¢ '}
            <span itemprop="author" itemscope itemtype="http://schema.org/Person">
              <span itemprop="name">{author}</span>
              {twitter_username && (
                <IconTwitter username={twitter_username} />
              )}
            </span>
          </>
        )}
      </p>
    </header>

    <div class="post-content" itemprop="articleBody">
      <slot />
    </div>
  </article>
</BaseLayout>
